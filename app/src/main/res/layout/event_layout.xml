<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginTop="@dimen/_20sdp"

    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_115sdp"
        app:cardElevation="5dp"
        android:focusable="true"
android:layout_marginBottom="@dimen/_20sdp"
        app:cardCornerRadius="@dimen/_15sdp"

        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:background="@drawable/event_hedder"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/event_name"
                    android:layout_marginLeft="@dimen/_17sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primaryTextColor"
                    android:text="Event :"/>
                <TextView
                    android:id="@+id/event_name2"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diwali"
                    android:layout_toRightOf="@id/event_name"/>
                <TextView
                    android:id="@+id/event_place"
                    android:layout_marginLeft="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Place :"
                    android:textColor="@color/primaryTextColor"

                    android:layout_below="@id/event_name2"/>
                <TextView
                    android:id="@+id/event_place2"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rasraj Party plaot."
                    android:layout_toRightOf="@id/event_place"
                    android:layout_below="@id/event_name2"/>
                <TextView
                    android:id="@+id/event_member"
                    android:layout_marginLeft="@dimen/_70sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Member :"
                    android:textColor="@color/primaryTextColor"

                    android:layout_below="@id/event_place"/>
                <TextView
                    android:id="@+id/event_member2"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Five Member"
                    android:layout_toRightOf="@id/event_member"
                    android:layout_below="@id/event_place"/>
                <TextView
                    android:id="@+id/event_date"
                    android:layout_marginLeft="@dimen/_125sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date :"
                    android:textColor="@color/primaryTextColor"

                    android:layout_below="@id/event_member"/>
                <TextView
                    android:id="@+id/event_date2"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3rd Dec,2019"
                    android:layout_toRightOf="@id/event_date"
                    android:layout_below="@id/event_member2"/>
                <TextView
                    android:id="@+id/event_Time"

                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_188sdp"
                    android:text="Time :"
                    android:textColor="@color/primaryTextColor"

                    android:layout_below="@id/event_date"/>
                <TextView
                    android:id="@+id/event_Time2"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3rd Dec,2019"
                    android:layout_toRightOf="@id/event_Time"
                    android:layout_below="@id/event_date2"/>
            </RelativeLayout>

        </FrameLayout>
    </android.support.v7.widget.CardView>



    </LinearLayout>