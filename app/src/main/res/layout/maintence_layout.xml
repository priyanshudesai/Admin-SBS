<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_14sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:focusable="true"
android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_22sdp"

            >
            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:scaleType="fitXY"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/_20sdp"

                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/new_symbol"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_15sdp">
                <TextView
                    android:id="@+id/maintence_name"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primaryTextColor"
                    android:text="Bill Name :"/>
                <TextView
                    android:id="@+id/maintence_name2"
                    android:layout_marginLeft="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mokariya Kaushik L."
                    android:layout_toRightOf="@id/maintence_name"/>
                <TextView

                    android:layout_marginLeft="@dimen/_10sdp"
                    android:id="@+id/maintence_ammount"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amount :"
                    android:textColor="@color/primaryTextColor"

                    android:layout_below="@id/maintence_name2"/>
                <TextView
                    android:id="@+id/maintence_ammount2"
                   android:layout_alignStart="@id/maintence_name2"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2000"
                    android:layout_toRightOf="@id/maintence_ammount"
                    android:layout_below="@id/maintence_name2"/>
                <TextView
                    android:id="@+id/maintence_last_date"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Date :"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textColor="@color/primaryTextColor"

                    android:layout_below="@id/maintence_ammount"/>
                <TextView
                    android:id="@+id/maintence_last_date2"
                    android:layout_alignStart="@id/maintence_name2"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30/12/2019"
                    android:layout_toRightOf="@id/maintence_last_date"
                    android:layout_below="@id/maintence_ammount2"/>

                <Button
                    android:layout_margin="@dimen/_10sdp"
                    android:id="@+id/maintence_sts"
                    android:layout_below="@id/maintence_last_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:text="Show Status"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"/>
            </RelativeLayout>


        </android.support.v7.widget.CardView>

    </FrameLayout>

</RelativeLayout>